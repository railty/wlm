<p id="notice"><%= notice %></p>


<ul class="nav nav-tabs">
  <li class='<%=@classes[0]%>'><%=link_to 'All', items_path(:report=>'all')%></li>
  <li class='<%=@classes[1]%>'><%=link_to 'Duplicated', items_path(:report=>'duplicated')%></li>
  <li class='<%=@classes[2]%>'><%=link_to 'Missing', items_path(:report=>'missing')%></li>
</ul>

<h1>Items(<%=@count%>)</h1>

<%= will_paginate @items, renderer: BootstrapPagination::Rails %>
<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>Item Number</th>
      <th>UPC</th>
      <th>Price</th>
      <th>Measure</th>
      <th>Description</th>
      <th>ALP Prod Num</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.upc %></td>
        <td><%= number_to_currency(item.unit_retail) %></td>
        <td><%= item.unit_size_uom %></td>
        <td><%= item.signing_desc %></td>
        <td><%= item.vendor_stk_nbr %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag({action: :upload}, multipart: true) do %>
  <%= file_field_tag 'excel' %>
  <%= submit_tag("upload") %>
<% end %>

<%=link_to 'Delete All', items_path(:act=>'delete', :report=>session[:report]), :class=>"btn btn-danger", :role=>"button"%>
